#!/bin/bash

JAR_DIR="$(dirname "$(readlink -f "$0")")"
NEW_FILE_PATH=$1 # Example: ../smashremixprivate/roms/newFile.bin
ORIGINAL_OFFSET=$2 # Example: 0x70E0
INTERNAL_FILE_TABLE_OFFSET=$3 # Example:0xE8
TARGET_FILE_TO_APPEND_TO_PATH=$4 # Example: ../smashremixprivate/roms/0xB.bin
INTERNAL_FILE_TABLE_OFFSET_TARGET=$5 # Example: 0x1EF8

java -jar $JAR_DIR/SSB64FileAppender.jar \
    "$NEW_FILE_PATH" \
    $ORIGINAL_OFFSET \
    $INTERNAL_FILE_TABLE_OFFSET \
    "$TARGET_FILE_TO_APPEND_TO_PATH" \
    $INTERNAL_FILE_TABLE_OFFSET_TARGET
